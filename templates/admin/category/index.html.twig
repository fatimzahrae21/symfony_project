{% extends 'admin/admin.html.twig' %}

{% block title 'Catégories' %}

{% block body %}

    <p>

        <a class="btn btn-primary" href="{{ path('admin.category.create')}}">Ajouter une catégorie</a>
    
    </p>

    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categorys %}
            <tr>
                <td>{{ category.name }}</td>
                <td>
                <div class="d-flex gab-1"> 
                   <a class="btn btn-primary" href="{{ path('admin.category.edit' , {id: category.id})}}">Editer</a>
                 
                      <form method="DELETE" action=" {{ path('admin.category.delete' , {id: category.id } )}}">
   <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete' ~ category.id) }}">
 <button class="btn btn-danger" type="submit">Supprimer</button>
</form>


                </div>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    
    </table>

{% endblock %}